<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net5.0;netstandard2.1</TargetFrameworks>
        <LangVersion>9</LangVersion>
        <AssemblyName>Proto.Cluster.Durable</AssemblyName>
        <RootNamespace>Proto.Cluster.Durable</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Google.Protobuf" Version="3.14.0" />
      <PackageReference Include="Grpc.Tools" Version="2.35.0-pre1">
        <PrivateAssets>all</PrivateAssets>
        <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      </PackageReference>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\Proto.Cluster.Consul\Proto.Cluster.Consul.csproj" />
    </ItemGroup>

    <ItemGroup>
        <Protobuf Include="protos.proto" />
    </ItemGroup>

</Project>
